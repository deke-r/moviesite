<%-include('header')%>
    <h3 class="h3 text-center mt-3">REGISTRATION DETAILS</h3>

    <div class="row">
        <div class="col-md-2">
            <%-include('left')%>

        </div>
        <div class="col-md-10">
            <!-- <hr> -->
            <div class="container">
                <!-- <h1 class="h4 text-center mt-3">Registration Data</h4> -->
                <hr>
                <% if(data.length>0) { %>
                    <table border="1">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" name="/signin">

                                <tr>
                                    <td>UserId</td>
                                    <td>Pass</td>
                                </tr>
                                <% for(var i=0; i<data.length; i++) { %>
                                    <tr>
                                        <td>
                                            <%= i %>
                                        </td>
                                        <td>
                                            <%= data[i].loginId %>
                                        </td>
                                        <td>
                                            <%= data[i].password %>
                                        </td>

                                        <td>
                                            <a href='/edit_login/<%= data[i]._id %>'><i class="fa-solid fa-pen-to-square"></i></a> |
                                            <a href='/delete_login/<%= data[i]._id %>'><i class="fa-solid fa-trash"></i></a>
                                            <!-- <a href='/show/<%= data[i]._id %>'>Show</a> -->
                                        </td>
                                    </tr>
                                    <% } %>


                            </table>
                            <% } else { %>
                                No Record Found
                                <% } %>
                        </div>
            </div>

        </div>
    </div>