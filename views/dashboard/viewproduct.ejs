<%-include('header')%>
    <h3 class="h3 text-center mt-3">ADDED PRODUCTS</h3>

    <div class="row">
        <div class="col-md-2">
            <%-include('left')%>
        </div>
        <div class="col-md-10">
            <hr>
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <% if(data.length>0) { %>
                            <table border="1">
                                <div class="table-responsive">
                                    <table class="table table-image">
                                        <tr>
                                            <td>Id</td>
                                            <td>Name</td>
                                            <td>Cast Names</td>
                                            <td>Date</td>
                                            <td>Url</td>
                                            <td>Img</td>
                                            <td>About</td>
                                            <td>Actions</td>

                                        </tr>
                                        <% for(var i=0; i<data.length; i++) { %>
                                            <tr>
                                                <td>
                                                    <%= i %>
                                                </td>
                                                <td>
                                                    <%= data[i].nameP %>
                                                </td>
                                                <td>
                                                    <%= data[i].castname %>
                                                </td>
                                                <td>
                                                    <%= data[i].date %>
                                                </td>
                                                <td>
                                                    <%= data[i].url %>
                                                </td>
                                                <td>
                                                    <%= data[i].img %>
                                                </td>
                                                <td>
                                                    <%= data[i].about %>
                                                </td>
                                                <td>
                                                    <a href='/edit_viewproduct/<%= data[i]._id %>'><i class="fa-solid fa-pen-to-square"></i></a> |
                                                    <a href='/delete_viewproduct/<%= data[i]._id %>'><i class="fa-solid fa-trash"></i></a>
                                                    <!-- <a href='/show/<%= data[i]._id %>'>Show</a> -->
                                                </td>
                                            </tr>
                                            <% } %>
                                    </table>
                                    <% } else { %>
                                        No Record Found
                                        <% } %>
                                </div>
                    </div>
                </div>
            </div>

        </div>
    </div>